@model FoodVM
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Food";
}

<form method="post" autocomplete="off">

    <dl>
        <dt><label asp-for="Name"></label></dt>
        <dd>
            <span asp-validation-for="Name"></span>
            <input asp-for="Name" />
        </dd>
        <dt> 
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
        </dt>
        <dd><input asp-for="Calories" /></dd>

        <dt><label asp-for="Unit"></label></dt>
        <dd> 
            <span asp-validation-for="Unit"></span>
            <select asp-for="Unit" asp-items="Html.GetEnumSelectList<Unit>()"></select>
        </dd>
    </dl>
    <button type="submit">Save changes</button>
</form>
